@model IEnumerable<WebApplication1.Models.Img>

@{
    ViewBag.Title = "MyGallery";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>MyGallery</h2>

<p>
    @Html.ActionLink("Upload", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.img_name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.img_description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.img_category)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.img_url)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.img_date)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.img_name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.img_description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.img_category)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UserName)
        </td>
        <td>
            <img src=@Url.Content("~/Img/"+(item.img_url)) style="width: 100px;height: auto" />

        </td>
        <td>
            @Html.DisplayFor(modelItem => item.img_date)
        </td>
        <td>
            @Html.ActionLink("แก้ไข", "Edit", new { id=item.img_id }) |
            @Html.ActionLink("ข้อมูลรูป", "MyDetails", new { id=item.img_id }) |
            @Html.ActionLink("ลบ", "Delete", new { id=item.img_id })
        </td>
    </tr>
}

</table>
